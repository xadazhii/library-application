<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.GaussianBlur?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="userAccountRoot" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.client.controller.AccountController">

    <ImageView fx:id="backgroundImage" fitHeight="600.0" fitWidth="900.0">
        <Image url="@images/personal.png" />
        <effect>
            <GaussianBlur radius="6" />
        </effect>
    </ImageView>

    <Label layoutX="24.0" layoutY="20.0" style="-fx-font-size: 28px; -fx-font-family: 'Arial Black'; -fx-text-fill: #ffffff;">
        <effect>
            <DropShadow color="#000000"/>
        </effect>
        <text>My Dashboard</text>
    </Label>

    <Button fx:id="helpButton" layoutX="820.0" layoutY="20.0" onAction="#onHelpButtonClick" style="-fx-background-radius: 50%; -fx-background-color: #007bff; -fx-border-color: transparent; -fx-padding: 0; -fx-font-size: 20px; -fx-text-fill: white; -fx-font-family: 'Arial'; -fx-min-width: 35px; -fx-min-height: 35px; -fx-max-width: 35px; -fx-max-height: 35px;">
        ?
    </Button>

    <VBox alignment="CENTER" layoutX="24.0" layoutY="91.0" prefHeight="250.0" prefWidth="250.0" spacing="15.0" style="-fx-background-color: #D3D3D3; -fx-border-color: black; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;">

        <HBox alignment="CENTER" spacing="10.0" style="-fx-translate-y: 20;">
            <ImageView fitHeight="30.0" fitWidth="30.0">
                <Image url="@images/books.png" />
            </ImageView>
            <Hyperlink fx:id="myBooksLink" onAction="#onMyBooksButtonClick" style="-fx-font-size: 18px; -fx-font-family: 'Arial'; -fx-text-fill: #333333;" text=" My Collection" />
        </HBox>

        <HBox alignment="CENTER" spacing="10.0" style="-fx-translate-y: 20;">
            <ImageView fitHeight="30.0" fitWidth="30.0">
                <Image url="@images/library.png" />
            </ImageView>
            <Hyperlink fx:id="libraryLink" onAction="#onLibraryButtonClick" style="-fx-font-size: 18px; -fx-font-family: 'Arial'; -fx-text-fill: #333333;" text="Library" />
        </HBox>

        <HBox alignment="CENTER" spacing="10.0" style="-fx-translate-y: 20; -fx-translate-x: 10;">
            <ImageView fitHeight="30.0" fitWidth="30.0">
                <Image url="@images/transaction.png" />
            </ImageView>
            <Hyperlink onAction="#onPersonalDataButtonClick"
                       style="-fx-font-size: 18px; -fx-font-family: 'Arial'; -fx-text-fill: #333333;"
                       text="My Transactions" />
        </HBox>

        <HBox alignment="CENTER" spacing="10.0" style="-fx-translate-y: 20;">
            <ImageView fitHeight="30.0" fitWidth="30.0">
                <Image url="@images/logout.png" />
            </ImageView>
            <Hyperlink onAction="#onLogoutButtonClick" style="-fx-font-size: 18px; -fx-font-family: 'Arial'; -fx-text-fill: #FF4500;" text="Logout" />
        </HBox>

        <HBox fx:id="adminButtonBox" alignment="CENTER" spacing="10.0" style="-fx-translate-y: 20;" visible="false">
            <ImageView fitHeight="30.0" fitWidth="30.0">
                <Image url="@images/admin.png" />
            </ImageView>
            <Hyperlink fx:id="adminLink" onAction="#onAdminPanelButtonClick" style="-fx-font-size: 18px; -fx-font-family: 'Arial'; -fx-text-fill: #333333;" text="Admin Panel" />
        </HBox>

        <HBox fx:id="settingsButtonBox" alignment="CENTER" spacing="10.0"
              style="-fx-translate-y: -26; -fx-translate-x: -18;" visible="false">
            <ImageView fitHeight="30.0" fitWidth="30.0">
                <Image url="@images/admin.png" />
            </ImageView>
            <Hyperlink fx:id="settingsLink" onAction="#onUpdateUser"
                       style="-fx-font-size: 18px; -fx-font-family: 'Arial'; -fx-text-fill: #333333;"
                       text="Settings" />
        </HBox>

    </VBox>

    <VBox layoutX="300.0" layoutY="120.0" spacing="20.0">
        <AnchorPane>
            <Label layoutX="100" style="-fx-font-size: 22px; -fx-font-family: 'Arial'; -fx-font-weight: bold; -fx-text-fill: #ffffff;">
                <effect>
                    <DropShadow color="#000000" radius="5.0" />
                </effect>
                <text>Personal Data</text>
            </Label>
        </AnchorPane>

        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <ImageView fx:id="userImage" fitHeight="120.0" fitWidth="120.0" style="-fx-background-radius: 60; -fx-border-radius: 60; -fx-border-color: white; -fx-border-width: 2;">
                <Image url="@images/user_profile.png" />
            </ImageView>

            <VBox spacing="10.0">
                <AnchorPane>
                    <Label fx:id="usernameLabel" layoutY="50" style="-fx-font-size: 18px; -fx-font-family: 'Arial'; -fx-text-fill: #D3D3D3;" text="Username: admin" />
                    <Label fx:id="emailLabel" layoutY="85" style="-fx-font-size: 18px; -fx-font-family: 'Arial'; -fx-text-fill: #D3D3D3;" text="Email: admin@admin.com" />
                </AnchorPane>
            </VBox>
        </HBox>

    </VBox>
</AnchorPane>